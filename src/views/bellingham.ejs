<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= player.name %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>
  <div class="container">
    <h1 class="name"><%= player.name %></h1>
    <div class="content">
      <div class="image">
        <img src="<%= player.image %>" alt="<%= player.name %>">
      </div>
      <div class="stats">
        <h2>Statistics</h2>
        <ul>
          <li>Matches: <%= player.stats.matches %></li>
          <li>Goals: <%= player.stats.goals %></li>
          <li>Assists: <%= player.stats.assists %></li>
        </ul>
      </div>
    </div>
    <div class="titles">
      <h2>Titles Won</h2>
      <ul>
        <% player.titles.forEach(title => { %>
          <li><%= title %></li>
        <% }); %>
      </ul>
    </div>
    <a href="/">Back to Home</a>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
